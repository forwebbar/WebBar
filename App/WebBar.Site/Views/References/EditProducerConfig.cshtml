@using System.Web.Optimization
@using Contracts.Common.AppServer
@model ProducerDto

<div class="col-md-4 col-md-offset-3">

    <h2>Правка</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.Label("Наименование", htmlAttributes: new {@class = "control-label col-md-4"})
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Юридический адрес", htmlAttributes: new {@class = "control-label col-md-4"})
                <div class="col-md-6">
                    @Html.EditorFor(model => model.LawAdress, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Фактический адрес", htmlAttributes: new {@class = "control-label col-md-4"})
                <div class="col-md-6">
                    @Html.EditorFor(model => model.ActualAdress, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("ИНН", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Inn, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("КПП", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Kpp, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("ОГРН(КП)", htmlAttributes: new {@class = "control-label col-md-4"})
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Ogrn, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Р/С", htmlAttributes: new {@class = "control-label col-md-4"})
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Account, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("БИК", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Bik, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Банк", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Bank, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Дата", htmlAttributes: new {@class = "control-label col-md-4"})
                <div class="col-md-6">
                    <div class="input-group date" id="datetimepicker">
                        <input type="text" id="Date" name="Date" class="form-control"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <button class="btn btn-default">Сохранить</button>
            </div>
        </div>
    }

    <!-- modal placeholder-->
    <div id='myModal' class='modal fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>

    <p>
        @Html.ActionLink("Обратно к списку поставщиков", "Producers", null, new {@class = "active col-md-4 col-md-offset-4"})

    </p>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

<script type="text/javascript">
    $(function() {
        $("#datetimepicker").datetimepicker({ locale: 'ru', format: 'DD-MM-YYYY', date: '@Model.ActualDate.GetValueOrDefault().ToString("o")' });
    });

</script>

